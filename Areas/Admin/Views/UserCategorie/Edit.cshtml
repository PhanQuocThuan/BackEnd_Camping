@model BackEnd_Camping.Models.UserCategories

@{
    ViewData["Title"] = "Edit";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <form asp-action="Edit">
        <div class="row">
            <div class="col"></div>
            <div class="col border border-2 my-auto">
                <h1 class="text-center">Edit Favorites Category</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UCAT_ID" />
            <div class="form-group">
                <label asp-for="USE_ID" class="control-label"></label>
                <select asp-for="USE_ID" class="form-control" asp-items="ViewBag.USE_ID"></select>
                <span asp-validation-for="USE_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CAT_ID" class="control-label"></label>
                <select asp-for="CAT_ID" class="form-control" asp-items="ViewBag.CAT_ID"></select>
                <span asp-validation-for="CAT_ID" class="text-danger"></span>
            </div>
                <div class="form-group mx-2 d-flex justify-content-center align-items-center my-2">
                    <a asp-action="Index" class="text-decoration-none">
                        <button type="button" class="back-button mx-5">
                            <i class="fa-solid fa-arrow-left text-white back-svgIcon"></i>
                        </button>
                    </a>
                    <button type="submit" class="add-button mx-5">
                        <i class="fa-solid fa-plus text-white edit-svgIcon"></i>
                    </button>
                </div>
            </div>

            <div class="col"></div>
        </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
